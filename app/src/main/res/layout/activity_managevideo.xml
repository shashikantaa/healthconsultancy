<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/fui_bgFacebook"
android:id="@+id/activity_managevideo"
android:padding="20dp"
tools:context=".ManagevideoActivity">
<TextView
    android:id="@+id/textViewFaculty"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Manage Video"
    android:textAlignment="center"
    android:textColor="@color/colorOrange"
    android:textSize="36sp"
    android:textStyle="bold|italic"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.496"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.152" />
<Button
    android:id="@+id/buttonAddVideo"
    android:layout_width="match_parent"
    android:layout_height="53dp"
    android:background="@drawable/rounded_dark_blue"
    android:text="Add Video"
    android:textColor="@android:color/background_light"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.324" />

<Button
    android:id="@+id/buttonShowVideo"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@drawable/rounded_dark_blue"
    android:text="Show Video"
    android:textColor="@android:color/background_light"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.46" />

<Button
    android:id="@+id/buttonUpdateVideo"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/rounded_dark_blue"
    android:text="Update Video"
    android:textColor="@android:color/background_light"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.603" />

<Button
    android:id="@+id/chatButtonFaculty"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/rounded_dark_blue"
    android:text="Chat"
    android:textColor="@android:color/background_light"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.754" />
</androidx.constraintlayout.widget.ConstraintLayout>